extends layout

block content

  .header_container
    h1 Flip the Senate
  .topnav
    button#homeButton.btn.btn-outline-primary(type='button') Home
    button#amyButton.btn.btn-outline-primary(type='button') Amy
    button#dougButton.btn.btn-outline-primary(type='button') Doug
    button#markButton.btn.btn-outline-primary(type='button') Mark
    button#johnButton.btn.btn-outline-primary(type='button') John
    button#zoomButton.btn.btn-outline-primary(type='button') ZoomTime
    button#mapButton.btn.btn-outline-primary(type='button') Map
    script(src='javascripts/client.js')
  .main
    .card.text-center
      .card-header
        h1.card-title Hi, #{name}
      .card-body
        h5.card-title Online Votes: #{likes}
        img(src='images/JohnH.jpg' style='width:400px')
      .card-footer.text-muted
        p #{about}
        form(action="/john", method="POST")
          button.btn.btn-success(type='submit') Vote John!

   

